<Window x:Class="CloudDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudDownload"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Download and Extract" Click="DownloadAndExtractButton_Click" Width="150" Margin="0,0,0,10"/>
            <Button Content="Cancel Download" Click="CancelDownloadButton_Click" Width="150" Margin="0,0,0,10"/>

            <ProgressBar Name="progressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
            <TextBlock x:Name="progressText" HorizontalAlignment="Center"/>
            <Button Content="Test" Click="Button_Click" Width="150" Margin="0,0,0,10"></Button>
        </StackPanel>
    </Grid>
</Window>
